<phpunit testdox="true" noInteraction="true" cacheResult="false">
  <php>
    <includePath>/app/src</includePath>
    <includePath>/app/tests</includePath>
    <env name="LOG_LEVEL" value="100" />
  </php>
  <logging>
    <log type="testdox-html" target="/app/testResults/testdox.html"/>
    <log type="testdox-text" target="/app/testResults/testdox.txt"/>
    <log type="junit" target="/app/testResults/junit.xml"/>
  </logging>
  <testsuites>
    <testsuite name="unit-tests">
      <directory>unit</directory>
    </testsuite>
    <testsuite name="integration-tests">
      <directory>integration</directory>
    </testsuite>
  </testsuites>
</phpunit>
