<phpunit testdox="true" noInteraction="true" cacheResult="false">
  <php>
    <includePath>/opt/video-converter/src</includePath>
    <includePath>/opt/video-converter/tests</includePath>
    <env name="LOG_LEVEL" value="100" />
  </php>
  <logging>
    <log type="testdox-html" target="/opt/video-converter/testResults/testdox.html"/>
    <log type="testdox-text" target="/opt/video-converter/testResults/testdox.txt"/>
    <log type="junit" target="/opt/video-converter/testResults/junit.xml"/>
  </logging>
  <testsuites>
    <testsuite name="unit-tests">
      <directory>unit</directory>
    </testsuite>
    <testsuite name="integration-tests">
      <directory>integration</directory>
    </testsuite>
  </testsuites>
  <coverage pathCoverage="true" >
    <report>
      <html outputDirectory="testResults/coverage" showUncoveredFiles="true" />
    </report>
    <include>
      <directory suffix=".php">src</directory>
    </include>
  </coverage>
</phpunit>
